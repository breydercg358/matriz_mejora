       {{#if message }}
       <br>
       <div class="container ctnr_message">
           <div class="row">
               <div class="col-md-7 mx-auto">
                   <div id="alert_danger" class="alert alert-danger alert-dismissible fade show rounded-0" role="alert">
                       <div class="text-center"><i class="fas fa-times-circle fa-fw p-4"></i>{{message}}</div>
                       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                       </button>
                   </div>
               </div>
           </div>
       </div>
       {{/if}}

       {{#if user_success }}
       <br>
       <div class="container ctnr_message">
           <div class="row">
               <div class="col-md-7 mx-auto">
                   <div id="alert_success" class="alert alert-success alert-dismissible fade show rounded-0"
                       role="alert">
                       <div class="text-center"><i class="fas fa-check-circle fa-fw p-4"></i>{{user_success}}</div>
                       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                       </button>
                   </div>
               </div>
           </div>
       </div>

       {{> JS_app}}

       {{/if}}