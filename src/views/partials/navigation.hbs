            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="modal fade" id="ModalCambiarContraseña" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-0">
          <div class="modal-header bg-dark rounded-0">
            <h4 class="text-light">Cambio de contraseña</h4>
            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/tables/usuarios/CambiarPwd/{{user.id_usuario}}" method="POST" name="FormCambiarPwd">
              <label for="CambioContraseña">Nueva contraseña</label>
              <div class="input-group">
                <span class="input-group-text bg-transparent borderless_hallazgos">
                  <i class="fas fa-key fa-fw"></i>
                </span>
                <input type="password" class="form-control" name="password" id="password">
              </div>
              <label for="ConfirmCambioContraseña">Confirmar nueva contraseña</label>
              <div class="input-group">
                <span class="input-group-text bg-transparent borderless_hallazgos">
                  <i class="fas fa-spell-check fa-fw"></i>
                </span>
                <input type="password" class="form-control" name="confirm_pwd" id="confirm_pwd">
              </div>
              <div class="d-flex justify-content-center">
                <div class="custom-control custom-switch">
                  <input class="custom-control-input" type="checkbox" id="toggle" onchange="togglePassword(this);">
                  <label class="custom-control-label" for="toggle" id="toggleText">Mostrar contraseñas</label>
                </div>
              </div>
              <br>
              <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success rounded-0">Cambiar</button>
                <button class="btn btn-outline-danger rounded-0" data-dismiss="modal">Cancelar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

