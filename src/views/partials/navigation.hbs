        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span><i class="fas fa-plus"></i></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <span class="mx-auto text-light"><b>MATRIZ DE MEJORA</b></span></span>
          <div class="dropdown">
            <button class="btn btn-dark dropdown-toggle rounded-0" type="button" id="dropdownMenuButton1"
              data-toggle="dropdown" aria-expanded="false">
              <span class="text-light">
                <i class="fas fa-user-circle"></i>
                {{user.nombre_usuario}}
              </span>
            </button>
            <ul class="dropdown-menu rounded-0" aria-labelledby="dropdownMenuButton1">
              <div class="dropdown-header">Opciones</div>
              <li><a class="dropdown-item" href="/logout">Cerrar sesión<i class="fas fa-sign-out-alt fa-fw"></i></a>
