<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item">Tabla usuarios</li>
        </ol>
    </nav>
</div>

<div class="container-fluid">
    <h4 class="text-center">Listado de usuarios</h4>
    <br>
    <div class="row justify-content-center">
        <div class="table-responsive col-md-11">
            <table class="table table-hover table-striped align-middle dt-responsive nowrap text-center" id="table_matriz">
                <div class="d-flex justify-content-start mr-4">
                    <button type="button" class=" btn btn-success rounded-0" data-bs-toggle="modal"
                        data-bs-target="#ModalAgregarUsuario">
                        <i class="fas fa-plus-circle fa-fw"></i>Agregar usuario
                    </button>
                </div>
                <thead class="table-dark">
                    <tr>
                        <th scope="col" title="Identificador" data-toggle="tooltip">ID</th>
                        <th scope="col">Nombre completo</th>
                        <th scope="col">Nombre de usuario</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Creado</th>
                        <th scope="col">Actualizado</th>
                        <th scope="col">Último inicio de sesión</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{id_usuario}}</td>
                        <td>{{nombre_persona}}</td>
                        <td>{{nombre_usuario}}</td>
                        <td>{{rol}}</td>
                        <td title="{{created_at}}" data-toggle="tooltip">{{timeago created_at}}</td>
                        <td title="{{updated_at}}" data-toggle="tooltip">{{timeago updated_at}}</td>
                        <td title="{{ultimo_login}}" data-toggle="tooltip">{{timeago ultimo_login}}</td>
                        <td>
                            <a class="btn btn-warning rounded-0 btn_tables_editar text-light"
                                href="/edit/{{id_usuario}}" title="Editar"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger rounded-0 btn_tables_eliminar text-light"
                                href="/delete/{{id_usuario}}" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="8">No hay datos para mostrar en esta tabla</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> modals}}