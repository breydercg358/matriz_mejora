{{!-- FORM EDITAR USUARIO --}}
<br>
<div class="card col-md-6 mx-auto">
    <h3 class="modal-title text-center bg-dark text-light" id="exampleModalLabel">Editar usuario</h3>
    <div class="card-body rounded-0">
        <form action="/edit/{{usuariosEdit.id_usuario}}" method="POST" name="form_usuario">
            <label for="ID" title="Identificador">ID</label>
            <div class="input-group">
                <span class="input-group-text id_input">
                    <i class="fas fa-hashtag"></i>
                </span>
                <input type="text" class="form-control" name="id_usuario" id="id_usuario"
                    value="{{usuariosEdit.id_usuario}}" readonly="readonly">
            </div>
            <label for="nombre_persona">Nombre</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent">
                    <i class="fas fa-signature"></i>
                </span>
                <input type="text" class="form-control" name="nombre_persona" id="nombre_persona"
                    value="{{usuariosEdit.nombre_persona}}" autofocus>
            </div>
            <label for="nombre_usuario">Nombre de usuario</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent">
                    <i class="fas fa-user"></i>
                </span>
                <input type="text" class="form-control" name="nombre_usuario" id="nombre_usuario"
                    value="{{usuariosEdit.nombre_usuario}}">
            </div>

            <label for="Rol">Rol</label>
            <div class="form-group">
                <select class="form-select" name="rol" id="rol">
                    <option selected disabled>SELECCIONE EL ROL</option>
                    <option value="Estándar">Estándar</option>
                    <option value="Administrador">Administrador</option>
                </select>
            </div>

            <label for="Contrasena">Contraseña</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent">
                    <i class="fas fa-key"></i>
                </span>
                <input type="password" class="form-control" name="password" id="password">
            </div>


            <label for="Contrasena">Confirmar contraseña</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent">

                    <i class="fas fa-spell-check"></i>

                </span>
                <input type="password" class="form-control" name="confirm_pwd" id="confirm_pwd">
            </div>

            <br>
            <div id="message"></div>


            <div class="d-flex justify-content-center">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="toggle" onchange="togglePassword(this);">
                    <label class="form-check-label" for="ShowHide" id="toggleText">Mostrar contraseñas</label>
                </div>
            </div>
            <br>
            <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success rounded-0">Editar</button>
                <a type="button" class="btn btn-outline-danger rounded-0" href="/table_usuarios">Cancelar</a>
            </div>
        </form>
    </div>
</div>