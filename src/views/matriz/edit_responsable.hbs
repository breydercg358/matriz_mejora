<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item"><a href="/table_responsables">Tabla responsables</a></li>
            <li class="breadcrumb-item">Editar responsable {{ResponsablesEdit.nombre_responsable}}</li>
        </ol>
    </nav>
</div>
<br>
<h3 class="modal-title col-md-6 mx-auto text-center bg-dark text-light" id="exampleModalLabel">Editar responsable</h3>
<div class="card col-md-6 mx-auto">
    <div class="card-body rounded-0">
        <form action="/edit_responsable/{{ResponsablesEdit.id_responsable}}" method="POST" name="form_responsable">
            <div class="input-group">
                <input type="hidden" class="form-control" name="id_prioridad" id="id_prioridad"
                    value="{{PrioridadesEdit.id_prioridad}}" readonly="readonly">
            </div>
            <label for="nombre_persona">Nombre del responsable</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent borderless_hallazgos">
                    <i class="fas fa-users"></i>
                </span>
                <input type="text" class="form-control" name="nombre_responsable" id="nombre_responsable"
                    value="{{ResponsablesEdit.nombre_responsable}}" autofocus>
            </div>
            <br>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-outline-success rounded-0" data-toggle="modal" data-target="#ModalEditarPrioridad{{@index}}">Editar</button>
                {{!-- MODAL EDITAR RESPONSABLE --}}
                <div class="modal fade" id="ModalEditarPrioridad{{@index}}" tabindex="-1"
                    aria-labelledby="EliminarUsuarioLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-md">
                        <div class="modal-content rounded-0">
                            <div class="modal-body rounded-0">
                                <span class="text-primary d-flex justify-content-center">
                                    <i class="fas fa-info-circle fa-3x"></i>
                                </span>
                                <br>
                                <h5 class="text-center">¿Desea editar al responsable<br>
                                    '{{ResponsablesEdit.nombre_responsable}}'?</h5>
                                <br>
                                <div class="modal-footer d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-success rounded-0">Sí
                                        (editar)</button>
                                    <button type="button" class="btn btn-outline-danger rounded-0"
                                        data-dismiss="modal">No (cerrar ventana)</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- FIN MODAL EDITAR RESPONSABLE --}}
                <a type="button" class="btn btn-outline-danger rounded-0" href="/table_responsables">Cancelar</a>
            </div>
        </form>
    </div>
</div>