<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item">Tabla sedes</li>
        </ol>
    </nav>
</div>

<h4 class="text-center">Listado de sedes</h4>
<br>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="table-responsive col-md-11">
            <table class="table table-hover table-striped caption-top text-center dt-responsive nowrap cell-border" id="table_matriz">
                <div class="d-flex justify-content-start mr-4">
                    <button type="button" class=" btn btn-success rounded-0" data-bs-toggle="modal"
                        data-bs-target="#ModalAgregarSede">
                        <i class="fas fa-plus-circle fa-fw"></i>Agregar sede
                    </button>
                </div>
                <thead class="table-dark">
                    <tr>
                        <th scope="col" title="Identificador" data-toggle="tooltip">ID</th>
                        <th scope="col">Nombre de la sede</th>
                        <th scope="col">Áreas</th>
                        <th scope="col">Creada</th>
                        <th scope="col">Actualizada</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each sedes}}
                    <tr>
                        <td>{{id_sede}}</td>
                        <td>{{nombre_sede}}</td>
                        <td>
                            <a class="btn btn-outline-primary rounded-0" href="/table_areas/areas?id_sede={{id_sede}}">Ver áreas</a>
                        </td>
                        <td title="{{created_at}}" data-toggle="tooltip">{{timeago created_at}}</td>
                        <td title="{{updated_at}}" data-toggle="tooltip">{{timeago updated_at}}</td>
                        <td>
                            <a class="btn btn-warning rounded-0 btn_tables_editar text-light"
                                href="/edit_sede/{{id_sede}}" title="Editar"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger rounded-0 btn_tables_eliminar text-light"
                                href="/delete_sede/{{id_sede}}" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="6">No hay datos para mostrar en esta tabla</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> modals}}