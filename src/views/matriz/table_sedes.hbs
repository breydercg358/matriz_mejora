<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item">Tabla sedes</li>
        </ol>
    </nav>
</div>

<div class="container">
    <h4 class="text-center text-light bg-dark col-md-3 mx-auto p-1 rounded-pill"><i
            class="fas fa-building fa-sm fa-fw text-primary"></i>Sedes</h4>
</div>
<br>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="table-responsive col-md-11">
            <button type="button" class=" btn btn-success rounded-0 btn_agregar" data-toggle="modal"
                data-target="#ModalAgregarSede">
                <i class="fas fa-plus-circle fa-fw"></i>Agregar nueva sede
            </button>
            <table class="table table-hover table-striped dt-responsive nowrap cell-border text-center"
                id="table_matriz">
                <div class="d-flex justify-content-start mr-4">
                </div>
                <thead class="thead-dark">
                    <tr>
                        {{!--<th scope="col" title="Identificador" data-toggle="tooltip">ID</th>--}}
                        <th scope="col">Nombre de la sede</th>
                        <th scope="col">Áreas</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each sedes}}
                    <tr>
                        {{!--<td class="align-middle">{{id_sede}}</td>--}}
                        <td class="align-middle">
                            <a class="a_dates" data-toggle="collapse" data-target="#collapseSedeInfo{{@index}}">{{nombre_sede}}</a>
                            <div class="collapse" id="collapseSedeInfo{{@index}}">
                                <i><b>Creada el: 
                                <br>
                                </b>{{dateFormat created_at format='DD-MM-YYYY [a las] h:mm:ss a'}}</i>
                                <br>
                                <i><b>Actualizada el: 
                                <br>
                                </b>{{dateFormat updated_at format='DD-MM-YYYY [a las] h:mm:ss a'}}</i>
                            </div>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary rounded-0"
                                href="/table_areas/areas?id_sede={{id_sede}}">Ver áreas</a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary btn_tables_editar" href="/edit_sede/{{id_sede}}"
                                data-toggle="tooltip"><i class="fas fa-edit"></i></a>
                        </td>
                        {{!-- MODAL ELIMINAR SEDE --}}
                        <div class="modal fade" id="ModalEliminarSede{{@index}}" tabindex="-1"
                            aria-labelledby="EliminarUsuarioLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-md">
                                <div class="modal-content rounded-0">
                                    <div class="modal-body">
                                        <span class="text-danger d-flex justify-content-center">
                                            <i class="fas fa-times-circle fa-3x"></i>
                                        </span>
                                        <br>
                                        <h5 class="text-center">¿Desea eliminar la sede<br>
                                            '{{nombre_sede}}'?</h5>
                                        <small class="text-muted d-flex justify-content-center">Este cambio no podrá ser revertido y eliminará todas las áreas dentro de esta sede.</small>
                                        <br>
                                        <div class="modal-footer d-flex justify-content-center">
                                            <a href="/delete_sede/{{id_sede}}"
                                                class="btn btn-outline-danger rounded-0">Sí (eliminar)</a>
                                            <button type="button" class="btn btn-outline-success rounded-0"
                                                data-dismiss="modal">No (volver)</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- FIN MODAL ELIMINAR FUENTE --}}
                        <td>
                            <button type="button" class="btn btn-outline-danger btn_tables_eliminar" data-dismiss="modal" data-toggle="modal"
                                data-target="#ModalEliminarSede{{@index}}"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> modals}}