<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item"><a href="/tables/estados">Tabla estados</a></li>
            <li class="breadcrumb-item">Editar estado {{EstadosEdit.nombre_estado}}</li>
        </ol>
    </nav>
</div>
<br>
<h3 class="modal-title col-md-6 mx-auto text-center bg-dark text-light" id="exampleModalLabel">Editar estado</h3>
<div class="card col-md-6 mx-auto">
    <div class="card-body rounded-0">
        <form action="/tables/estados/edit/{{EstadosEdit.id_estado}}" method="POST" name="form_estado">
            <div class="input-group">
                <input type="hidden" class="form-control" name="id_estado" id="id_estado"
                    value="{{EstadosEdit.id_estado}}" readonly="readonly">
            </div>
            <label for="nombre_persona">Nombre del estado</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent borderless_hallazgos">
                    <i class="fas fa-signal"></i>
                </span>
                <input type="text" class="form-control" name="nombre_estado" id="nombre_estado"
                    value="{{EstadosEdit.nombre_estado}}" autofocus>
            </div>
            <label for="color_estado">Color del estado</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent borderless_hallazgos">
                    <i class="fas fa-palette"></i>
                </span>
                <input type="text" class="inp form-control" value="{{EstadosEdit.color_estado}}" name="color_estado" id="colorPicker">
                <div class="palette" id="colorPalette"></div>
            </div>
            <br>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-outline-success rounded-0" data-toggle="modal" data-target="#ModalEditarEstado{{@index}}">Editar</button>
                {{!-- MODAL EDITAR ESTADO --}}
                <div class="modal fade" id="ModalEditarEstado{{@index}}" tabindex="-1"
                    aria-labelledby="EliminarUsuarioLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-md">
                        <div class="modal-content rounded-0">
                            <div class="modal-body rounded-0">
                                <span class="text-primary d-flex justify-content-center">
                                    <i class="fas fa-info-circle fa-3x"></i>
                                </span>
                                <br>
                                <h5 class="text-center">¿Desea editar el estado<br>
                                    '{{EstadosEdit.nombre_estado}}'?</h5>
                                <br>
                                <div class="modal-footer d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-success rounded-0">Sí
                                        (editar)</button>
                                    <button type="button" class="btn btn-outline-danger rounded-0"
                                        data-dismiss="modal">No (cerrar ventana)</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- FIN MODAL EDITAR ESTADO --}}
                <a type="button" class="btn btn-outline-danger rounded-0" href="/tables/estados">Cancelar</a>
            </div>
        </form>
    </div>
</div>