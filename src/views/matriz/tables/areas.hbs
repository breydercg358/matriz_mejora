<div class="d-flex justify-content-end p-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio matriz</a></li>
            <li class="breadcrumb-item"><a href="/tables/sedes">Tabla sedes</a></li>
            <li class="breadcrumb-item">Tabla áreas {{sedes.nombre_sede}}</li>
        </ol>
    </nav>
</div>

<div class="container">
    <h4 class="text-center text-light bg-dark col-md-5 mx-auto p-1 rounded-pill"><i
            class="fas fa-map-marker-alt fa-sm fa-fw text-primary"></i>Áreas de la sede {{sedes.nombre_sede}}
    </h4>
</div>
<br>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="table-responsive col-md-8">
            <button type="button" class=" btn btn-success rounded-0 btn_agregar" data-toggle="modal"
                data-target="#ModalAgregarArea">
                <i class="fas fa-plus-circle fa-fw"></i>Agregar nueva área
            </button>
            <table class="table table-hover table-striped dt-responsive nowrap cell-border text-center"
                id="table_matriz">
                <thead class="thead-dark">
                    <tr>
                        {{!--<th scope="col" title="Identificador" data-toggle="tooltip">ID</th>--}}
                        <th scope="col">Nombre del área</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each areas}}
                    <tr>
                        {{!--<td class="align-middle">{{id_area}}</td>--}}
                        <td class="align-middle">
                            <a class="a_dates" data-toggle="collapse" data-target="#collapseAreaInfo{{@index}}">{{nombre_area}}</a>
                            <div class="collapse" id="collapseAreaInfo{{@index}}">
                                <i><b>Creada el: 
                                <br>
                                </b>{{dateFormat created_at format='DD-MM-YYYY [a las] h:mm:ss a'}}</i>
                                <br>
                                <i><b>Actualizada el: 
                                <br>
                                </b>{{dateFormat updated_at format='DD-MM-YYYY [a las] h:mm:ss a'}}</i>
                            </div>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary btn_tables_editar"
                                href="/tables/areas/edit/{{id_area}}/sede?id_sede={{id_sede}}"><i class="fas fa-edit"></i></a>
                        </td>
                        {{!-- MODAL ELIMINAR ÁREA --}}
                        <div class="modal fade" id="ModalEliminarArea{{@index}}" tabindex="-1"
                            aria-labelledby="EliminarUsuarioLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-md">
                                <div class="modal-content rounded-0">
                                    <div class="modal-body">
                                        <span class="text-danger d-flex justify-content-center">
                                            <i class="fas fa-times-circle fa-3x"></i>
                                        </span>
                                        <br>
                                        <h5 class="text-center">¿Desea eliminar la área de<br>
                                            '{{nombre_area}}'?</h5>
                                        <small class="text-muted d-flex justify-content-center">Este cambio no podrá ser revertido</small>
                                        <br>
                                        <div class="modal-footer d-flex justify-content-center">
                                            <a href="/tables/areas/delete/{{id_area}}/sede?id_sede={{id_sede}}"
                                                class="btn btn-outline-danger rounded-0">Sí (eliminar)</a>
                                            <button type="button" class="btn btn-outline-success rounded-0"
                                                data-dismiss="modal">No (volver)</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- FIN MODAL ELIMINAR ÁREA --}}
                        <td>
                            <button type="button" class="btn btn-outline-danger btn_tables_eliminar" data-dismiss="modal" data-toggle="modal"
                                data-target="#ModalEliminarArea{{@index}}"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> modals}}