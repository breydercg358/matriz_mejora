<div class="container container_login">
    <h1 class="text-center text-light title_login p-2">MATRIZ DE MEJORA</h1>
<div class="card card_login col-md-4 mx-auto rounded-0">
    <div class="card-body rounded-0">
            <form action="/login" class="text-center form_login" method="POST" name="form_login">
        <label for="nombre_usuario">Nombre de usuario</label>
        <div class="input-group justify-content-center">
            <span class="input-group-text bg-transparent borderless_hallazgos">
                <i class="fas fa-user"></i>
            </span>
            <input type="text" class="form-control" name="nombre_usuario" id="nombre_usuario" autofocus>
        </div>
        <label for="contrasena">Contraseña</label>
        <div class="input-group justify-content-center">
            <span class="input-group-text bg-transparent borderless_hallazgos">
                <i class="fas fa-key"></i>
            </span>
            <input type="password" class="form-control" name="password" id="password">
        </div>

        <div class="d-flex justify-content-center">
            <div class="custom-control custom-switch">
                <input class="custom-control-input" type="checkbox" id="toggle" onchange="togglePassword(this);">
                <label class="custom-control-label" for="toggle" id="toggleText">Mostrar contraseña</label>
            </div>
        </div>
        <br>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-primary rounded-0">Ingresar</button>
        </div>
    </form>
    </div>
</div>
</div>