<form action="/login" class="text-center form_login" method="POST" name="form_login">
    <div class="container-fluid container_login rounded-0 col-md-8">
        <h1 class="text-center title_login text-light bg-dark">MATRIZ DE MEJORA</h1>
        <label for="nombre_usuario">Nombre de usuario</label>
        <div class="input-group justify-content-center">
            <span class="input-group-text bg-transparent">
                <i class="fas fa-user"></i>
            </span>
            <div class="col-md-4">
                <input type="text" class="form-control" name="nombre_usuario" id="nombre_usuario" autofocus>
            </div>
        </div>
        <label for="contrasena">Contraseña</label>
        <div class="input-group justify-content-center">
            <span class="input-group-text bg-transparent">
                <i class="fas fa-key"></i>
            </span>
            <div class="col-md-4">
                <input type="password" class="form-control" name="password" id="password">
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="toggle" onchange="togglePassword(this);">
                <label class="form-check-label" for="ShowHide" id="toggleText">Mostrar contraseña</label>
            </div>
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary rounded-0">Ingresar</button>
        </div>
</form>
</div>